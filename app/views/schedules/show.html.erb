<div class="header">
	<div class="h1_container">
		<h1>Schedule-Manager</h1>
	</div>
	<div class="switcher_container">
		<div id="switch1" class="switch switch_clicked">Week 1</div>
		<div id="switch2" class="switch">Week 2</div>
	</div>
</div>
<table class='schedule'>
		<tr>
			<th><p>Mon</p></th>
			<th><p>Tue</p></th>
			<th><p>Wed</p></th>
			<th><p>Thu</p></th>
			<th><p>Fri</p></th>
			<th><p>Sat</p></th>
			<th class="sunday"><p>Sun</p></th>
		</tr>
	<% (1..6).each do |k| %>
		<tr>
			<% (1..6).each do |l| %>
				<td>
					<div class='week1'>
						<% if @items[k][l][0] && @items[k][l][0].week1 && 
							@items[k][l][0].week2 || @items[k][l][0] %>
							<h3><%= @items[k][l][0].name %></h3>
							<p><%= @items[k][l][0].teacher %></p>
							<p><%= @items[k][l][0].location %></p>
						<% end %>
					</div>
					<div class='week2 hidden'>
						<% if @items[k][l][0] && @items[k][l][0].week1 && 
							@items[k][l][0].week2 %>
							<h3><%= @items[k][l][0].name %></h3>
							<p><%= @items[k][l][0].teacher %></p>
							<p><%= @items[k][l][0].location %></p>
						<% end %>
						<% if @items[k][l][1] %>
							<h3><%= @items[k][l][1].name %></h3>
							<p><%= @items[k][l][1].teacher %></p>
							<p><%= @items[k][l][1].location %></p>
						<% end %>
					</div>
				</td>
			<% end %>
		</tr>
	<% end %>
</table>
<script type="text/javascript">
	var switch1 = $('#switch1'),
	    switch2 = $('#switch2');
	switch1.on('click', function(){
		switch1.addClass('switch_clicked');
		switch2.removeClass('switch_clicked');
	});
	switch2.on('click', function(){
		switch1.removeClass('switch_clicked');
		switch2.addClass('switch_clicked');
	});
</script>