<div class="container">
	<h1>Schedule-Manager - solution for universities or schools, where you can keep your schedule.</h1>
	<div class="sign_form">
		<h2>Change Password</h2>
		<%= form_for @user do |f| %>
			<%= f.password_field :old_pass, placeholder: 'Old Password' %>
			<%= f.password_field :password, placeholder: 'New Password' %>
			<%= f.password_field :password_confirmation, placeholder: 'New Password Confirmation' %>
			<%= f.submit %>
		<% end %> 
	</div>
</div>