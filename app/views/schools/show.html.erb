<div class="container">
  <div class="path_info_container">
    <p><%= @school.name %></p>
    <%= link_to('Edit',edit_school_path(@school),class: 'right') if @user == current_user %>
  </div>
  <div class="wrap">
    <h4>Groups:</h4>
    <ul class="list">
      <% @school.groups.each do |group| %>
        <li><%= link_to group.name+' ('+group.schedules.count.to_s+')', school_group_path(@school,group) %></li>
      <% end %>
    <ul>
  </div>
</div>